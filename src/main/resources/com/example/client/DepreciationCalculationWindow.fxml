<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.client.DepreciationCalculationController">

    <!-- Заголовок окна -->
    <Label text="Расчет амортизации"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"
           layoutX="20" layoutY="20" />

    <!-- Контейнер для динамического добавления полей ввода -->
    <VBox fx:id="inputFieldsContainer"
          spacing="8" alignment="CENTER"
          layoutX="20" layoutY="60" maxWidth="300">
    </VBox>

    <!-- Контейнер для кнопок -->
    <HBox alignment="CENTER" spacing="10"
          layoutX="20" layoutY="180">
        <Button text="Рассчитать"
                onAction="#calculateDepreciation"
                prefWidth="100"/>
        <Button text="Отмена"
                onAction="#closeWindow"
                prefWidth="100"/>
    </HBox>
</AnchorPane>
