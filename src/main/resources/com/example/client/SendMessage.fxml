<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="438.0" prefWidth="693.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.SendMessageController">
    <!-- Таблица пользователей -->
    <TableView fx:id="accountTable" layoutX="14.0" layoutY="20.0" prefHeight="351.0" prefWidth="276.0" style="-fx-font-size: 14;">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="roleColumn" prefWidth="63.0" text="Роль" />
            <TableColumn fx:id="loginColumn" prefWidth="70.0" text="Логин" />
            <TableColumn fx:id="emailColumn" prefWidth="89.0" text="Email" />
        </columns>
    </TableView>

    <Label layoutX="300.0" layoutY="20.0" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Входящие сообщения" />

    <!-- Список входящих сообщений -->
    <ListView fx:id="receivedMessagesListView" layoutX="300.0" layoutY="53.0" prefHeight="267.0" prefWidth="175.0" style="-fx-font-size: 14;" />

    <!-- Заголовок для исходящих сообщений -->
    <Label layoutX="500.0" layoutY="20.0" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Исходящие сообщения" />

    <!-- Список исходящих сообщений -->
    <ListView fx:id="sentMessagesListView" layoutX="500.0" layoutY="53.0" prefHeight="267.0" prefWidth="175.0" style="-fx-font-size: 14;" />

    <!-- Поле для ввода сообщения -->
    <TextArea fx:id="messageInput" layoutX="299.0" layoutY="326.0" prefHeight="60.0" prefWidth="376.0" promptText="Введите ваше сообщение..." style="-fx-font-size: 14; -fx-border-radius: 5;" wrapText="true" />

    <!-- Кнопки -->
    <Button fx:id="sendMessageButton" layoutX="588.0" layoutY="394.0" onAction="#handleSendMessage" style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 5;" text="Отправить" />
    <Button fx:id="backButton" layoutX="14.0" layoutY="382.0" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: #607D8B; -fx-font-size: 16px; -fx-border-color: transparent;" text="← Назад" />
</AnchorPane>
