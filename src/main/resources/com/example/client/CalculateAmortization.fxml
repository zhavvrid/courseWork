            <Button onAction="#filterByDateRange" text="Применить фильтр" />
        </HBox>

        <HBox layoutX="20.0" layoutY="20.0" spacing="10" />

        <TableView fx:id="depreciationTable" layoutX="20.0" layoutY="50.0" prefHeight="500.0" prefWidth="1160.0">
            <columns>
                <TableColumn fx:id="rowNumberColumn" prefWidth="42.66665458679199" text="№" />
                <TableColumn fx:id="nameColumn" prefWidth="109.33330917358398" text="Название актива" />
                <TableColumn fx:id="inventoryNumberColumn" prefWidth="99.33338928222656" text="Инвент. номер" />
                <TableColumn fx:id="depreciationMethodColumn" prefWidth="108.00006103515625" text="Метод амортизации" />
                <TableColumn fx:id="initialCostColumn" prefWidth="124.6666259765625" text="Нач. стоимость" />
                <TableColumn fx:id="usefulLifeColumn" minWidth="0.0" prefWidth="0.0" text="Срок полезного использования" />
                <TableColumn fx:id="purchaseDateColumn" prefWidth="87.99996948242188" text="Дата покупки" />
                <TableColumn fx:id="depreciationCalculationDateColumn" prefWidth="152.66668701171875" text="Дата на которую рассчитывается амортизация" />
                <TableColumn fx:id="residualValueCol" minWidth="0.0" prefWidth="110.66656494140625" text="Ликвидац. стоимость" />
                <TableColumn fx:id="depreciationAmountColumn" minWidth="0.0" prefWidth="88.0" text="Сумма амортизации" />
                <TableColumn fx:id="accumulatedDepreciationColumn" prefWidth="130.66668701171875" text="Накопл. амортизация" />
                <TableColumn fx:id="residualValueColumn" prefWidth="108.0" text="Ост. стоимость" />
            </columns>
        </TableView>

        <HBox layoutX="20.0" layoutY="560.0" spacing="10" />
        <Button fx:id="backButton" layoutX="20.0" layoutY="556.0" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-color: transparent;" text="← Назад" />
      <Button layoutX="241.0" layoutY="562.0" mnemonicParsing="false" onAction="#loadAmortization" prefHeight="25.0" prefWidth="133.0" text="Вывести все активы" />
          <Button fx:id="generateReportButton" layoutX="122.0" layoutY="562.0" onAction="#generateReport" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Создать отчет" />
    </children>
</AnchorPane>
