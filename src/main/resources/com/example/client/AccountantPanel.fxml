<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #2E3348;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.AccountantPanel">
    <children>
        <Button fx:id="headerButton" layoutX="262.0" layoutY="20.0" style="-fx-font-size: 28; -fx-background-color: transparent;" text="Меню бухгалтера" textFill="#f2ecec">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>

        <AnchorPane layoutX="50.0" layoutY="100.0" prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: #fafafa;">
            <children>
                <VBox alignment="TOP_CENTER" layoutX="205.0" layoutY="24.0" prefHeight="402.0" prefWidth="289.0" spacing="10.0">


                    <Button fx:id="manageAssetsButton" onAction="#openManageAssetWindow" prefHeight="45.0" prefWidth="297.0" style="-fx-background-color: #F39C63; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-size: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 5, 0, 0, 4);" text="Управление основными средствами" />

                    <Button fx:id="depreciationReportsButton" onAction="#openReportsWindow" prefHeight="45.0" prefWidth="297.0" style="-fx-background-color: #F39C63; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-size: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 5, 0, 0, 4);" text="Отчеты по амортизации" />

                    <Button fx:id="messageAccountantButton" onAction="#sendMessage" prefHeight="45.0" prefWidth="297.0" style="-fx-background-color: #F39C63; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-size: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 5, 0, 0, 4);" text="Сообщения" />

                    <Button fx:id="exitButton" onAction="#exitApplication" prefHeight="45.0" prefWidth="297.0" style="-fx-background-color: #F39C63; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-size: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 5, 0, 0, 4);" text="Выход">
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets></Button>
                    <opaqueInsets>
                        <Insets left="50.0" />
                    </opaqueInsets>
                </VBox>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </AnchorPane>
    </children>
</AnchorPane>
