    <Label text="Логин:" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="70" />
    <TextField fx:id="login" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="90" />

    <Label text="Пароль:" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="130" />
    <TextField fx:id="password" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="150" />

    <Label text="Email:" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="190" />
    <TextField fx:id="email" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="210" />

    <Label text="Роль:" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="250" />
    <TextField fx:id="role" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="270" />

    <Button onAction="#saveUser" text="Сохранить" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="500" />
