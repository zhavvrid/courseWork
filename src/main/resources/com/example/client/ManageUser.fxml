<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #2E3348;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.AccountManagement">
    <children>
        <Button fx:id="backButton" layoutX="14.0" layoutY="550.0" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-color: transparent;" text="← Назад" />

        <Button layoutX="230.0" layoutY="20.0" style="-fx-font-size: 24; -fx-background-color: transparent; -fx-text-fill: #f2ecec;" text="Управление учетными записями" />
        <TableView fx:id="accountTable" layoutX="20.0" layoutY="80.0" prefHeight="400.0" prefWidth="760.0" style="-fx-font-size: 14;">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="roleColumn" prefWidth="150.0" text="Роль" />
                <TableColumn fx:id="loginColumn" prefWidth="150.0" text="Логин" />
                <TableColumn fx:id="passwordColumn" prefWidth="150.0" text="Пароль" />
                <TableColumn fx:id="emailColumn" prefWidth="250.0" text="Email" />
            </columns>
        </TableView>

        <HBox layoutX="20.0" layoutY="500.0" spacing="10.0">
            <Button onAction="#handleAddAccount" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 8;" text="Добавить" />
            <Button onAction="#handleEditAccount" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 8;" text="Редактировать" />
            <Button onAction="#handleDeleteAccount" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 8;" text="Удалить" />
        </HBox>
    </children>
</AnchorPane>
