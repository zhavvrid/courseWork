<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.FixedAssetController">
    <top>
        <HBox spacing="10" BorderPane.alignment="CENTER">
            <Button fx:id="addButton" onAction="#openAddAssetWindow" style="-fx-background-color: #F39C63; -fx-text-fill: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 5, 0, 0, 4); -fx-font-size: 15;" text="➕">
            <HBox.margin>
               <Insets left="20.0" top="2.0" />
            </HBox.margin></Button>
            <Button fx:id="deleteButton" onAction="#deleteSelectedAsset" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 5, 0, 0, 4); -fx-font-size: 15;" text="🗑">
            <HBox.margin>
               <Insets top="2.0" />
            </HBox.margin></Button>
            <Button fx:id="editButton" onAction="#editSelectedAsset" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 5, 0, 0, 4); -fx-font-size: 15;" text="✏">
            <font>
               <Font size="10.0" />
            </font>
            <HBox.margin>
               <Insets top="2.0" />
            </HBox.margin></Button>
            <TextField fx:id="searchField" promptText="Поиск..." style="-fx-border-radius: 8; -fx-padding: 5;">
            <HBox.margin>
               <Insets left="600.0" top="8.0" />
            </HBox.margin></TextField>
            <ComboBox fx:id="searchParameterComboBox" promptText="Параметр поиска" style="-fx-border-radius: 8;">
            <HBox.margin>
               <Insets top="8.0" />
            </HBox.margin></ComboBox>
            <Button fx:id="searchButton" onAction="#searchAssets" style="-fx-background-color: #2E3348; -fx-text-fill: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 5, 0, 0, 4); -fx-font-size: 15;" text="🔍">
            <HBox.margin>
               <Insets top="5.0" />
            </HBox.margin></Button>
        </HBox>
    </top>

    <center>
        <TableView fx:id="assetsTable" maxHeight="800.0" prefHeight="500.0" prefWidth="900.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="34.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="78.7" text="Название" />
                <TableColumn fx:id="inventoryNumberColumn" prefWidth="127.3" text="Инвентарный номер" />
                <TableColumn fx:id="purchaseDateColumn" prefWidth="90.7" text="Дата покупки" />
                <TableColumn fx:id="initialCostColumn" prefWidth="101.3" text="Нач. стоимость" />
                <TableColumn fx:id="usefulLifeColumn" prefWidth="60.3" text="СПИ" />
                <TableColumn fx:id="residualValueColumn" prefWidth="158.00003051757812" text="Ликвидац. стоимость" />
                <TableColumn fx:id="depreciationMethodColumn" minWidth="0.0" prefWidth="152.66668701171875" text="Метод амортизации" />
                <TableColumn fx:id="categoryColumn" prefWidth="104.66668701171875" text="Категория" />
            </columns>
        </TableView>
    </center>

    <left>
        <VBox alignment="CENTER" maxWidth="800.0" spacing="10" style="-fx-background-color: #2E3348;">
            <Button fx:id="calculateButton" onAction="#openDepreciationCalculationWindow" style="-fx-background-color: #F39C63; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 5, 0, 0, 4);" text="Рассчитать амортизацию" />
         <Button fx:id="viewAssets" onAction="#loadAssets" prefHeight="36.0" prefWidth="207.0" style="-fx-background-color: #F39C63; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 5, 0, 0, 4);" text="Вывести все фонды" />
            <Button fx:id="viewAmortizationAssets" onAction="#loadAmortization" prefHeight="36.0" prefWidth="207.0" style="-fx-background-color: #F39C63; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 5, 0, 0, 4);" text="Отобразить учет" />
         
             <Button fx:id="backButton" layoutX="14.0" layoutY="382.0" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-color: transparent;" text="← Назад">
             <VBox.margin>
               <Insets left="-140.0" top="350.0" />
            </VBox.margin>
            <opaqueInsets>
               <Insets top="30.0" />
            </opaqueInsets>
         </Button>
        </VBox>
    </left>
</BorderPane>
